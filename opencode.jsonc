{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "permission": {
    "bash": {
      "git push": "ask",
    },
    "doom_loop": "ask",
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    },
    "playwriter": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "playwriter"
      ],
    },
    "notion": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
      "enabled": false
    },
  }
}
