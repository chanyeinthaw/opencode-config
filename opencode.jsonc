{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "permission": {
    "bash": {
      "git push": "ask",
    },
    "doom_loop": "ask",
  },
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "playwriter"
      ],
      "enabled": true,
    },
    "notion": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
    },
  }
}
